<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_width="match_parent"
    android:layout_height="320dp"
    android:background="@color/Dgray"
    android:layout_margin="@dimen/dim_m">
    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_comment_or_review"
        android:layout_marginTop="@dimen/dim_xl"
        android:textSize="@dimen/dim_2xl"
        android:textStyle="bold"
        android:gravity="center_horizontal"

        />
    <com.moshrouk.sofra.helper.RatingBarEmoji
        android:id="@+id/add_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dim_xl"

        />
    <RelativeLayout
        android:id="@+id/comment_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_12xl"
        android:layout_below="@+id/add_rate"
        android:layout_marginStart="@dimen/dim_xl"
        android:layout_marginEnd="@dimen/dim_xl"
        android:background="@drawable/row_style"
        android:backgroundTint="@color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/add_not"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dim_m"
            android:background="@color/white"
            android:hint="@string/add_comment_or_review"
            android:textColorHint="@color/black" />

    </RelativeLayout>
    <Button
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_layout"
        android:background="@drawable/button_style"
        android:layout_margin="@dimen/dim_3xl"
        android:text="@string/add"
        android:textColor="@color/white"/>

</RelativeLayout>


