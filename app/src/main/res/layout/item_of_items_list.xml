<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_11xl">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_details"
            android:text="@string/order_details"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_xl"/>
        <TextView
            android:id="@+id/order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_details"
            android:layout_toEndOf="@+id/order_name"
            android:text="@string/pricee"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_xl"/>
        <TextView
            android:id="@+id/order_details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_name"
            android:text="@string/order_details"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_xl"/>
        <TextView
            android:id="@+id/order_details_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_name"
            android:layout_toEndOf="@+id/order_details_name"
            android:text="@string/pricee"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_xl"/>
        <TextView
            android:id="@+id/order_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_details_name"
            android:text="@string/order_details"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_xl"/>
        <TextView
            android:id="@+id/order_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_details_name"
            android:layout_toEndOf="@+id/order_detail_name"
            android:text="@string/pricee"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_xl"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>