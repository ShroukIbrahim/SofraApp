<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/Dgray"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/cart"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center"
        android:layout_weight="1"
      >

        <ImageView
            android:id="@+id/cart_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dim_xl"
            android:src="@drawable/ic_shopping_cart_black_24dp"/>

        <TextView
            android:id="@+id/count_cart_num"
            android:layout_width="@dimen/dim_2xl"
            android:layout_height="@dimen/dim_2xl"
            android:layout_gravity="end|top"
            android:layout_marginTop="@dimen/dim_m"
            android:background="@drawable/btn_background"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:text="0"
            android:visibility="gone"
            android:textColor="@color/red"
            android:textSize="10sp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tittle"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center"
        android:textColor="@color/maven"
        android:textSize="@dimen/dim_2xl"
        android:layout_weight="8" />

    <RelativeLayout
        android:id="@+id/notf_icon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dim_mm"
            android:src="@drawable/ic_notifications_none_black_24dp" />

        <TextView
            android:id="@+id/count_num"
            android:layout_width="@dimen/dim_2xl"
            android:layout_height="@dimen/dim_2xl"
            android:layout_gravity="end|top"
            android:layout_marginTop="@dimen/dim_m"
            android:gravity="center"
            android:text="0"
            android:visibility="gone"
            android:background="@drawable/btn_background"
            android:backgroundTint="@color/white"
            android:textColor="@color/red"
            android:textSize="10sp" />

    </RelativeLayout>
</LinearLayout>

