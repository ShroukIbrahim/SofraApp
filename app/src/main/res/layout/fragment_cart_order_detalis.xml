<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".ui.fragment.Client.homecycle.cart.CartOrderDetalisFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/not_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_15xl"
        android:layout_margin="@dimen/dim_xl"
        android:background="@drawable/row_style"
        android:backgroundTint="@color/Dgray">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/add_not"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dim_xl"
            android:background="@color/Dgray"
            android:hint="@string/add_nots"
            android:textColorHint="@color/black" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_3xl"
        android:layout_below="@id/not_layout"
        android:layout_marginStart="@dimen/dim_2xl"
        android:layout_marginTop="@dimen/dim_xl"
        android:text="@string/address"
        android:textColor="@color/black"
        android:textSize="@dimen/dim_2xl" />

    <TextView
        android:id="@+id/client_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_3xl"
        android:layout_below="@id/txt_address"
        android:layout_marginStart="@dimen/dim_2xl"
        android:layout_marginTop="@dimen/dim_xl"
        android:textColor="@color/red"
        android:textSize="@dimen/dim_2xl"
        tools:text="@string/address" />

    <TextView
        android:id="@+id/txt_paymentby"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_3xl"
        android:layout_below="@id/client_address"
        android:layout_marginStart="@dimen/dim_2xl"
        android:layout_marginTop="@dimen/dim_xl"
        android:text="@string/Payment_by"
        android:textColor="@color/black"
        android:textSize="@dimen/dim_2xl" />

    <TextView
        android:id="@+id/txt_cash"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dim_3xl"
        android:layout_below="@id/txt_paymentby"
        android:layout_marginStart="@dimen/dim_3xl"
        android:layout_marginTop="@dimen/dim_xl"
        android:text="@string/cash"
        android:textColor="@color/black"
        android:textSize="@dimen/dim_2xl" />

    <TextView
        android:id="@+id/txt_online"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dim_3xl"
        android:layout_below="@id/txt_paymentby"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/dim_2xl"
        android:layout_marginTop="@dimen/dim_xl"
        android:layout_marginEnd="@dimen/dim_3xl"
        android:text="@string/online"
        android:textColor="@color/black"
        android:textSize="@dimen/dim_2xl" />

        <RadioButton
            android:id="@+id/cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_cash"
            android:layout_marginStart="@dimen/dim_3xl"
            android:layout_marginBottom="@dimen/dim_3xl"
            android:background="@drawable/btn_background"
            android:button="@drawable/radio_button"
            android:checked="true"
            />


    <RadioButton
        android:id="@+id/online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_cash"
        android:layout_alignParentEnd="true"
        android:checked="false"
        android:layout_marginEnd="@dimen/dim_3xl"
        android:layout_marginStart="@dimen/dim_3xl"
        android:button="@drawable/radio_button"
        android:background="@drawable/btn_background"
        android:layout_marginBottom="@dimen/dim_3xl"
        />
    <RelativeLayout
        android:id="@+id/order_det_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_15xl"
        android:layout_below="@id/cash"
        android:layout_margin="@dimen/dim_xl"
        android:background="@drawable/row_style">

        <TextView
            android:id="@+id/txt_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_price"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_xl"/>
        <TextView
            android:id="@+id/orderprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/txt_order_price"
            android:text="20"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_xl"/>
        <TextView
            android:id="@+id/txt_delivery_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_order_price"
            android:text="@string/delivery_costt"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_xl"/>
        <TextView
            android:id="@+id/delivery_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderprice"
            android:layout_toEndOf="@+id/txt_delivery_price"
            android:text="20"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_xl"/>
        <TextView
            android:id="@+id/txt_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_delivery_price"
            android:text="@string/total_txt"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_xl"/>
        <TextView
            android:id="@+id/total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/delivery_cost"
            android:layout_toEndOf="@+id/txt_total_price"
            android:text="20"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_xl"/>



    </RelativeLayout>

    <Button
        android:id="@+id/confirm_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_det_layout"
        android:layout_marginStart="@dimen/dim_4xl"
        android:layout_marginEnd="@dimen/dim_4xl"
        android:background="@drawable/button_style"
        android:text="@string/confirm_order"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/dim_3xl"
        />
    </RelativeLayout>
</ScrollView>

</RelativeLayout>