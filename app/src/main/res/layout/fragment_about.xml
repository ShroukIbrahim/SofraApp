<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginimage">


    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_us"
        android:textColor="@color/Dgray"
        android:textSize="@dimen/dim_3xl"
        android:gravity="center"

        android:layout_marginTop="@dimen/dim_2xl"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_20xl"
        android:layout_below="@+id/txt"
        android:layout_margin="@dimen/dim_2xl"
        android:padding="@dimen/dim_marg"
        android:background="@drawable/row_style"
        android:backgroundTint="@color/Dgray"
        android:text="@string/about" />

</RelativeLayout>