<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.fragment.Client.homecycle.MoreFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dim_2xl"
        android:layout_marginEnd="@dimen/dim_2xl"
        android:layout_marginTop="@dimen/dim_2xl"
        >
<TextView
    android:id="@+id/txt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/more"
    android:gravity="center"
    android:textColor="@color/black"
    android:textSize="@dimen/txt_size_2xl"

    />

    <TextView
        android:id="@+id/offer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:text="@string/my_offer"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_size_xl"
        android:drawableStart="@drawable/gift"
        android:drawablePadding="@dimen/dim_m"
        android:layout_marginTop="@dimen/dim_2xl"/>

        <View
            android:id="@+id/o_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_ss"
            android:layout_marginTop="@dimen/dim_xl"
            android:layout_below="@+id/offer"
            android:background="@color/Dgray"

            >

        </View>
        <TextView
            android:id="@+id/connect_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_below="@+id/o_view"
            android:text="@string/connect_us"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_xl"
            android:drawableStart="@drawable/ic_mail_outline_black_24dp"
            android:drawablePadding="@dimen/dim_m"
            android:layout_marginTop="@dimen/dim_2xl"/>

        <View
            android:id="@+id/c_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_ss"
            android:layout_marginTop="@dimen/dim_xl"
            android:layout_below="@+id/connect_us"
            android:background="@color/Dgray"
            >

        </View>
        <TextView
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c_view"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/about"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_xl"
            android:drawableStart="@drawable/ic_lightbulb_outline_black_24dp"
            android:drawablePadding="@dimen/dim_m"
            android:layout_marginTop="@dimen/dim_2xl"/>

        <View
            android:id="@+id/a_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_ss"
            android:layout_marginTop="@dimen/dim_xl"
            android:layout_below="@+id/about"
            android:background="@color/Dgray"
            >

        </View>
        <TextView
            android:id="@+id/comment_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_below="@+id/a_view"
            android:text="@string/comment_review"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_xl"
            android:drawableStart="@drawable/ic_star_black_24dp"
            android:drawablePadding="@dimen/dim_m"
            android:layout_marginTop="@dimen/dim_2xl"/>

        <View
            android:id="@+id/r_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_ss"
            android:layout_marginTop="@dimen/dim_xl"
            android:layout_below="@+id/comment_review"
            android:background="@color/Dgray"
            >

        </View>
        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/r_view"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/logout"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_xl"
            android:drawableStart="@drawable/ic_exit_to_app_black_24dp"
            android:drawablePadding="@dimen/dim_m"
            android:layout_marginTop="@dimen/dim_2xl"/>


    </RelativeLayout>


</RelativeLayout>