<?xml version="1.0" encoding="utf-8"?>
<com.moshrouk.sofra.helper.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_12xl"
    android:layout_gravity="center_vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:dragFromEdge="right">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/delete_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_delete_black_24dp"
                android:background="@color/white"
                android:text="@string/delete"/>

            <ImageButton
                android:id="@+id/edit_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/white"
                app:srcCompat="@drawable/ic_edit_green_24dp"
                android:text="Edit"/>

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_12xl"
    android:layout_margin="@dimen/dim_m"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:background="@color/white">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dim_6xl"
            android:background="@drawable/background_of_resturant"
            android:backgroundTint="@color/Dgray">

            <TextView
                android:id="@+id/offer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_5xl"
                android:layout_marginTop="@dimen/dim_4xl"
                android:text="@string/restaurant_name"
                android:textColor="@color/black"/>


        </RelativeLayout>


        <ImageView
            android:id="@+id/restaurant_Image"
            android:layout_width="@dimen/dim_10xl"
            android:layout_height="@dimen/dim_10xl"
            android:layout_centerVertical="true"
            android:src="@drawable/reslogo" />


    </RelativeLayout>
</RelativeLayout>
    </FrameLayout>
</com.moshrouk.sofra.helper.SwipeRevealLayout>