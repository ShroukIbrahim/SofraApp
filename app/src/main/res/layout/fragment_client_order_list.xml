<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.Client.homecycle.OrderListFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/order_fragment_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/order_fragment_current_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:tabGravity="fill"
            />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/order_fragment_previous_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:tabGravity="fill" />

    </com.google.android.material.tabs.TabLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/order_fragment_pag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_below="@+id/order_fragment_tab">

    </androidx.viewpager.widget.ViewPager>
</RelativeLayout>